#jinja2: trim_blocks:True, lstrip_blocks:True
job "{{ job.name }}" {
  datacenters = ["{{ datacenter }}"]

  group "{{ job.name }}-group" {
    count = {{ job.count }}

    network {
      mode = "bridge"

      dns {
        servers = {{ (ansible_facts['dns']['nameservers'] + ['1.1.1.1']) | tojson }}
      }

      {% for port_name, port_details in job.ports[0].items() %}
      port "{{ port_name }}" {
        {% if port_details.get('static') %}
        static = {{ port_details['static'] }}
        {% endif %}
        {% if port_details.get('to') %}
        to = {{ port_details['to'] }}
        {% endif %}
      }
      {% endfor %}
    }

    {% for port_name in job.ports[0] %}
    service {
      name = "{{ job.name }}"
      port = "{{ port_name }}"
      tags = ["{{ port_name }}"]
      provider = "nomad"
    }
    {% endfor %}

    task "eth-faucet" {
      driver = "exec"

      artifact {
        source = "https://github.com/chainflag/eth-faucet/releases/download/v1.1.0/eth-faucet_1.1.0_Linux_x86_64.tar.gz"
      }

      artifact {
        source = "https://primev-infrastructure-artifacts.s3.us-west-2.amazonaws.com/faucet_keystore_{{ version }}.tar.gz"
      }

      template {
        data = <<-EOH
          {%- raw %}
          {{ with secret "secret/data/mev-commit" }}{{ .Data.data.faucet_keystore_password }}{{ end }}
          {% endraw %}
        EOH
        destination = "secrets/password.txt"
      }

      template {
        data = <<-EOH
          #!/usr/bin/env bash
          {%- raw %}
          {{- range nomadService "mev-commit-geth-bootnode1" }}
            {{- if contains "http" .Tags }}
          RPC_URL="http://{{ .Address }}:{{ .Port }}"
            {{- end }}
          {{- end }}
          {% endraw %}
          KEYSTORE_FILE=$(ls local | grep -E '^UTC--.*--.*$')
          if [ -z "$KEYSTORE_FILE" ]; then
            echo "Keystore file not found"
            exit 1
          fi
          chmod +x local/eth-faucet
          ./local/eth-faucet \
            --httpport 80 \
            --faucet.amount 10 \
            --faucet.minutes 60 \
            --faucet.name "mev-commit chain" \
            --wallet.keyjson local/$KEYSTORE_FILE \
            --wallet.keypass secrets/password.txt \
            --wallet.provider $RPC_URL
        EOH
        destination = "local/run.sh"
        perms = "0755"
      }

      config {
        command = "bash"
        args = ["-c", "local/run.sh"]
      }
    }
  }
}
