#jinja2: trim_blocks:True, lstrip_blocks:True
job "{{ job.name }}" {
  datacenters = ["{{ datacenter }}"]

  group "{{ job.name }}-group" {
    count = {{ job.count }}

    {% if env == 'devenv' %}
    restart {
      attempts = 0
      mode = "fail"
    }

    reschedule {
      attempts = 0
      unlimited = false
    }
    {% endif %}

    network {
      mode = "bridge"

      dns {
        servers = {{ (ansible_facts['dns']['nameservers'] + ['1.1.1.1']) | tojson }}
      }

      {% for port_name, port_details in job.ports[0].items() %}
      port "{{ port_name }}" {
        {% if port_details.get('static') %}
        static = {{ port_details['static'] }}
        {% endif %}
        {% if port_details.get('to') %}
        to = {{ port_details['to'] }}
        {% endif %}
      }
      {% endfor %}
    }

    task "geth" {
      driver = "exec"

      {% for port_name in job.ports[0] %}
      service {
        name = "{{ job.name }}"
        port = "{{ port_name }}"
        tags = ["{{ port_name }}"]
        provider = "nomad"
      }
      {% endfor %}

      artifact {
        source = "https://gethstore.blob.core.windows.net/builds/geth-linux-{{ 'amd64' if target_system_architecture == 'x86_64' else 'arm64' }}-1.14.11-f3c696fa.tar.gz"
      }
      {% if env != 'devenv' %}
      artifact {
        source = "https://primev-infrastructure-artifacts.s3.us-west-2.amazonaws.com/genesis_{{ version }}.json"
      }
      {% else %}
      artifact {
        source = "http://{{ ansible_facts['default_ipv4']['address'] }}:1111/genesis_{{ version }}.json"
      }
      {% endif %}

      template {
        data = <<-EOH
          {% raw %}
          GETH_BIN="local/geth-linux-{% endraw %}{{ 'amd64' if target_system_architecture == 'x86_64' else 'arm64' }}{% raw %}-1.14.11-f3c696fa/geth"
          CONTRACT_DEPLOYER_KEYSTORE_FILENAME="{{ with secret "secret/data/mev-commit" }}{{ .Data.data.contract_deployer_keystore_filename }}{{ end }}"
          {% endraw %}
        EOH
        destination = "secrets/.env"
        env = true
      }

      template {
        data = <<-EOH
          #!/usr/bin/env bash

          # Mutate genesis file to only have a single alloc to contract deployer
          ${GETH_BIN} --dev dumpgenesis > local/custom_genesis.json
          jq -s '.[0].alloc = .[1].alloc | .[0]' local/custom_genesis.json local/genesis_{{ version }}.json > local/custom_genesis.json
          ${GETH_BIN} --datadir local/data init local/custom_genesis.json

          exec ${GETH_BIN} \
            --dev \
            --http \
            --http.addr 0.0.0.0 \
            --http.api eth,net,web3 \
            --ws \
            --ws.addr 0.0.0.0 \
            --ws.api=debug,eth,txpool,net,engine \
            --dev.period 12 \
            --datadir local/data
        EOH
        destination = "local/run.sh"
        change_mode = "noop"
        perms = "0755"
      }

      config {
        command = "bash"
        args = ["-c", "exec local/run.sh"]
      }
    }
  }
}
